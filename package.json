{
  "name": "giorgiofederici-backend",
  "version": "1.0.0",
  "description": "Giorgio Federici's personal website. [Backend]",
  "scripts": {
    "build": "npm run build:clean && npm run build:ts && npm run build:tslint",
    "build:clean": "rimraf dist",
    "build:ts": "./node_modules/.bin/tsc --build ./tsconfig.json",
    "build:tslint": "./node_modules/.bin/tslint -c ./tslint.json -p ./tsconfig.json",
    "debug": "npm run build && cpx ./server/config.env ./dist/server  && npm run local:debug -e \"require('./dist/server/bin/server.js').start()\"",
    "start": "node -e \"require('./dist/server/bin/server.js').start()\"",
    "stop": "./node_modules/.bin/forever stopall",
    "start:dev": "set \"NODE_ENV=development\" && set \"DEBUG=gf:*\" && npm run local:nodemon",
    "start:prod": "npm run build && cpx ./server/config.env ./dist/server && set \"NODE_ENV=production\" && set \"DEBUG=gf:*\" && node -e \"require('./dist/server/bin/server.js').start()\"",
    "test": "set \"DEBUG=gf:*\" && mocha",
    "coverage": "nyc npm run test",
    "test:ts-mocha": "npm run local:ts-mocha -p tsconfig.json tests/**/*.spec.ts",
    "test:ci": "nyc npm run test && cat ./coverage/lcov.info | coveralls",
    "test:coverage": "npm run local:jest --coverage",
    "local:debug": "./node_modules/.bin/ndb",
    "local:jest": "./node_modules/.bin/jest",
    "local:nodemon": "./node_modules/.bin/nodemon",
    "local:nyc": "./node_modules/.bin/nyc",
    "local:ts-mocha": "./node_modules/.bin/ts-mocha",
    "import-data:delete": "./node_modules/.bin/tsc --build ./scripts/tsconfig.json && node ./scripts/compiled/scripts/import-data.js --delete",
    "import-data:import": "./node_modules/.bin/tsc --build ./scripts/tsconfig.json && node ./scripts/compiled/scripts/import-data.js --import"
  },
  "author": "Giorgio Federici",
  "private": true,
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.0.0",
    "forever": "^1.0.0",
    "helmet": "^3.19.0",
    "hpp": "^0.2.2",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.6",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.16",
    "path-to-regexp": "^3.0.0",
    "pug": "^2.0.4",
    "sharp": "^0.23.0",
    "validator": "^11.1.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.26",
    "@types/chai": "^4.1.7",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/debug": "^4.1.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/express-mongo-sanitize": "^1.3.1",
    "@types/express-rate-limit": "^3.3.1",
    "@types/helmet": "0.0.43",
    "@types/hpp": "^0.2.1",
    "@types/html-to-text": "^1.4.31",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.7",
    "@types/mockery": "^1.4.29",
    "@types/mongodb": "^3.1.20",
    "@types/mongoose": "^5.3.20",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/nock": "^10.0.3",
    "@types/node": "^11.10.4",
    "@types/nodemailer": "^6.2.1",
    "@types/pug": "^2.0.4",
    "@types/sharp": "^0.22.2",
    "@types/shelljs": "^0.8.3",
    "@types/sinon": "^7.0.13",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^10.11.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "cpx": "^1.5.0",
    "jest": "^24.8.0",
    "mocha": "^6.2.0",
    "mockery": "^2.1.0",
    "ndb": "^1.1.4",
    "nock": "^10.0.6",
    "node-mocks-http": "^1.7.6",
    "nyc": "^14.1.1",
    "rewiremock": "^3.13.7",
    "shelljs": "^0.8.3",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.13",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-mocha": "^6.0.0",
    "ts-mock-imports": "^1.2.6",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
